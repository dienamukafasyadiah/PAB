<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Back Button -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:contentDescription="Back Button"
                android:background="@android:color/transparent"
                android:layout_marginEnd="8dp"
                android:onClick="onBackPressed" />

            <!-- Header Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Pentingnya Minum Air Bagi Kesehatan Tubuh"
                android:textColor="@color/biru"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Body Diagram with Icons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ic_glas"
                android:contentDescription="Body Diagram"
                android:scaleType="fitCenter" />

            <!-- You can add more icons or graphics below this if needed -->
        </RelativeLayout>

        <!-- Description Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/konsumsi1"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Section 1: Manfaat Minum Air Bagi Kesehatan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mengapa Minum Air Itu Penting?"
            android:textSize="16sp"
            android:textColor="@color/biru"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air adalah komponen utama tubuh manusia yang membantu menjaga keseimbangan cairan, mendukung pencernaan, menjaga suhu tubuh, dan membuang racun. Menjaga tubuh tetap terhidrasi dapat membantu meningkatkan energi, fokus, dan mengurangi kelelahan."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Section 2: Efek Dehidrasi pada Tubuh -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efek Dehidrasi pada Tubuh"
            android:textSize="16sp"
            android:textColor="@color/biru"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dehidrasi dapat menyebabkan banyak masalah kesehatan, mulai dari kelelahan, pusing, hingga gangguan fungsi organ tubuh. Oleh karena itu, sangat penting untuk memastikan tubuh mendapatkan cukup cairan setiap hari."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Section 3: Tips untuk Menjaga Hidrasi Tubuh -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Menjaga Hidrasi Tubuh"
            android:textSize="16sp"
            android:textColor="@color/biru"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berikut adalah beberapa tips untuk menjaga tubuh tetap terhidrasi dengan baik sepanjang hari:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Minumlah air putih secara berkala, terutama saat merasa haus."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Cobalah untuk mengganti minuman manis dengan air putih."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Jika sering lupa minum, gunakan pengingat atau aplikasi khusus hidrasi."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Section 4: Kesimpulan - Pentingnya Minum Air -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kesimpulan"
            android:textSize="16sp"
            android:textColor="@color/biru"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menjaga tubuh tetap terhidrasi dengan cukup air setiap hari adalah hal yang penting untuk menjaga kesehatan tubuh secara keseluruhan. Pastikan Anda mengonsumsi cukup air putih setiap hari untuk mendukung berbagai fungsi tubuh dan menjaga keseimbangan cairan tubuh."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Footer Section: Source or Reference -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sumber: Website Kesehatan"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
